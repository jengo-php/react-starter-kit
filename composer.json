{
  "name": "jengo/reat-starter-kit",
  "description": "CodeIgniter4 React starter kit",
  "license": "MIT",
  "type": "project",
  "version": "dev-preview",
  "keywords": [
    "CodeIgniter4",
    "React",
    "Starter Kit"
  ],
  "author": {
    "name": "Ian Ochieng",
    "email": "ochiengian383@gmail.com"
  },
  "require": {
    "php": "^8.1",
    "codeigniter4/framework": "^4.0",
    "jengo/core": "^1.0",
    "jengo/inertia-ci4": "^0.0.6"
  },
  "require-dev": {
    "fakerphp/faker": "^1.9",
    "mikey179/vfsstream": "^1.6",
    "pestphp/pest": "^3.8"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Config\\": "app/Config/"
    },
    "exclude-from-classmap": [
      "**/Database/Migrations/**"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/",
      "Tests\\Support\\": "tests/_support"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "test": "pest"
  }
}
